<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.nhn.android.maps.NMapView
        android:id="@+id/mapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="@string/hello" />

    <TextView
        android:id="@+id/tv_address_activity1"
        android:layout_width="fill_parent"
        android:layout_height="14.5dp"
        android:layout_margin="0dp"
        android:background="#000000"
        android:gravity="center"
        android:padding="0dp"
        android:paddingTop="0dp"
        android:text="@string/default_address"
        android:textColor="#ffffff"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/tv_address_activity2"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_margin="0dp"
        android:layout_marginBottom="20dp"
        android:background="#000000"
        android:gravity="center"
        android:padding="0dp"
        android:paddingTop="0dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />

    <ImageButton
        android:id="@+id/activity_1_myreallocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_address_activity1"
        android:layout_marginRight="22dp"
        android:layout_marginTop="17dp"
        android:background="@layout/buttonshape"
        android:scaleType="fitXY"
        android:src="@drawable/activity_1_mylocation" />

</RelativeLayout>